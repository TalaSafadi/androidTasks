<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#688A6C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="7dp"

        />

    <TextView
        android:layout_width="97dp"
        android:layout_height="84dp"
        android:fontFamily="monospace"
        android:text="My Tasks"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="227dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:text="Stay a head of all your Tasks "
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="98dp"
        app:srcCompat="@drawable/to_do_guy" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="serif"
        android:text="Stay on top of things "
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/viewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#5A8C5E"
        android:text="view Task"
        android:textColor="#FEFEFE" />

</RelativeLayout>